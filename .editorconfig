# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 2 space indentation
[*.{rb,yml,yaml,json,js,jsx,ts,tsx,css,scss,html,haml,slim,erb}]
indent_style = space
indent_size = 2

# 4 space indentation
[*.{py,java,c,cpp,h}]
indent_style = space
indent_size = 4

# Tab indentation
[{Makefile,*.go}]
indent_style = tab

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Python
[*.py]
max_line_length = 88  # Black formatter default
